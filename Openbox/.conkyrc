#	Open Sans Light

# -- Lua Load -- #
lua_load ~/.draw_bg.lua
lua_draw_hook_pre draw_bg

#lua_load ~/.bargraph_small.lua
lua_draw_hook_post main_bars

imlib_cache_size 0

